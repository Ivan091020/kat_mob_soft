    ViewData["Title"] = "AppCatalog — Контакты";
}
<main class="container">
    <section id="contacts" class="section contacts-section">
        <h2 class="section-title">Контакты</h2>

        <div class="contacts-grid">
            <div class="contact-info">
                <p><strong>Адрес:</strong> г. Тирасполь, ул. Примерная, 1</p>
                <p><strong>Телефон:</strong> +373 (XXX) XXX-XXX</p>
                <p><strong>Email:</strong> support@mobilecatalog.example</p>

                <h4>Часы работы</h4>
                <p>Пн–Пт: 09:00 — 18:00</p>

                <div class="contact-actions">
                    <a class="btn" href="mailto:support@mobilecatalog.example">Написать нам</a>
                    <a class="btn" href="/feedback">Форма обратной связи</a>
                </div>

                <div class="socials" style="margin-top:10px;">
                    <a href="#">Telegram</a> • <a href="#">VK</a>
                </div>
            </div>

            <div class="contact-map" aria-hidden="false">
                <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A234482ce84919874ff393825c32b162ec15a1f99bd00b213e614a5f436062d39&amp;width=500&amp;height=400&amp;lang=ru_RU&amp;scroll=true"></script>
                
                        
                        
